<?xml version="1.0" encoding="utf-8" ?>
<component name="SearchResults" extends="JFGroup">
  <children>
  <Rectangle width="1920" height="1080" color="#000000" opacity="0.75" />
    <LayoutGroup layoutDirection="horiz"  id="SearchAlphabox" translation="[0, 150]">
      <SearchBox id="SearchBox" visible="true"   />
    </LayoutGroup>
      <LayoutGroup layoutDirection="horiz"  id="SearchAlphabox" translation="[600, 150]" >
        <Label id = "Search_Help_text" text="You can search for Titles, People, Live TV Channels and more"/>
        
      </LayoutGroup>    
      <OptionsSlider id="options" />
  <SearchRow id="SearchSelect" visible="true" translation="[600, 200]"/>
  <Spinner id = "SearchSpinner"  visible="true" translation="[1250, 500]"/>
  </children>
  <interface>
    <field id="query" type="string" alwaysNotify="true" />
    <field id="SearchAlpha" type="string" alias="SearchBox.search_values" alwaysNotify="true" onChange="SearchMedias" />

  </interface>
  <script type="text/brightscript" uri="SearchResults.brs" />
  <script type="text/brightscript" uri="pkg:/source/api/Items.brs" />
  <script type="text/brightscript" uri="pkg:/source/api/baserequest.brs" />
  <script type="text/brightscript" uri="pkg:/source/utils/config.brs" />
  <script type="text/brightscript" uri="pkg:/source/api/Image.brs" />
  <script type="text/brightscript" uri="pkg:/source/utils/deviceCapabilities.brs" />
</component>
